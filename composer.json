{
    "name": "power-components/livewire-powergrid",
    "description": "PowerGrid generates Advanced Datatables using Laravel Livewire.",
    "homepage": "https://github.com/power-components/livewire-powergrid",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Luan Freitas",
            "email": "luanfreitasgoncalves@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "livewire/livewire": "^2.10",
        "doctrine/dbal": "^3.1|2.12.1",
        "openspout/openspout": "^4.10"
    },
    "suggest": {
        "openspout/openspout": "Required to export XLS and CSV"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "illuminate/support": "^9.0",
        "pestphp/pest": "^1.21",
        "orchestra/testbench": "^7.0",
        "composer/composer": "^2.1",
        "pestphp/pest-plugin-faker": "^1.0",
        "pestphp/pest-plugin-livewire": "^1.0",
        "laradumps/laradumps": "dev-2x",
        "laravel/pint": "^1.2",
        "nunomaduro/larastan": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "PowerComponents\\LivewirePowerGrid\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PowerComponents\\LivewirePowerGrid\\Tests\\" : "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PowerComponents\\LivewirePowerGrid\\Providers\\PowerGridServiceProvider"
            ]
        }
    },
    "scripts": {
        "pint:fix": "./vendor/bin/pint",
        "test": "@test:sqlite",
        "test:pint": "./vendor/bin/pint --test",
        "test:sqlite": [
            "@require-openspout",
            "./vendor/bin/pest --configuration phpunit.sqlite.xml"
        ],
        "test:mysql":  [
            "@require-openspout",
            "./vendor/bin/pest --configuration phpunit.mysql.xml"
        ],
        "test:pgsql": [
            "@require-openspout",
            "./vendor/bin/pest --configuration phpunit.pgsql.xml"
        ],
        "test:sqlsrv": [
            "@require-openspout",
            "./vendor/bin/pest --configuration phpunit.sqlsrv.xml"
        ],
        "test:types": "./vendor/bin/phpstan analyse --ansi --memory-limit=-1",
        "require-openspout": "composer require openspout/openspout",
        "test:dbs": [
            "@test:sqlite",
            "@test:mysql",
            "@test:pgsql",
            "@test:sqlsrv"
        ],
        "check": [
            "@test:pint",
            "@test:types",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true
        }
    }
}
